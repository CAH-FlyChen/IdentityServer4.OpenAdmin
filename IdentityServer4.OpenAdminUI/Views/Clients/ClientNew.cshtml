@model IdentityServer4.Models.Client

@using (Html.BeginForm("AddClient", "Clients", FormMethod.Post, new
{
    @class = ""
}))
{
    <div class="client">
        <div class="row page-header">
            <div class="col-sm-10">
                <h1>Create new client</h1>
            </div>
            <div class="col-sm-2">
                @Html.ActionLink("< Back", "GetClients", new {}, new {@class = "btn btn-info"})
            </div>
        </div>

        <div class="row">
            <div class="col-sm-12">
                <div class="form-group">
                    @Html.LabelFor(m => m.ClientId, new {@class = ""})
                    @Html.TextBoxFor(m => m.ClientId, new {@class = "form-control", required = "required", placeholder = "Enter a client id"})
                    @Html.ValidationMessageFor(m => m.ClientId)
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.ClientName, new {@class = ""})
                    @Html.TextBoxFor(m => m.ClientName, new {@class = "form-control", required = "required", placeholder = "Enter a client name"})
                    @Html.ValidationMessageFor(m => m.ClientName)
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-12">
                <form asp-action="AddAsync">
                    <button class="btn btn-info">Create client</button>
                </form>
            </div>
        </div>
    </div>
}