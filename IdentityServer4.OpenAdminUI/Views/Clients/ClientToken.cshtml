@using IdentityServer4.OpenAdminUI.Extensions
@model IdentityServer4.Models.Client
@{
    //var accessTokenTypeItems = Enum
    //    .GetValues(typeof(AccessTokenType))
    //    .Cast<AccessTokenType>()
    //    .Select(value => new SelectListItem
    //    {
    //        Text = Enum.GetName(typeof(AccessTokenType), value),
    //        Value = value.ToString()
    //    });
}

<div class="client">
    @Html.Partial("_ClientHeader", Model)

    <div class="row">
        <div class="col-sm-10">
            @using (Html.BeginForm("SaveClientGeneral", "Clients", FormMethod.Post, new
            {
                @class = ""
            }))
            {
                <div class="form-group">
                    @Html.LabelFor(m => m.ClientId, new {@class = "control-label"})
                    @Html.TextBoxFor(m => m.ClientId, new {@class = "form-control"})
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.ClientName, new {@class = ""})
                    @Html.TextBoxFor(m => m.ClientName, new {@class = "form-control"})
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.AbsoluteRefreshTokenLifetime, new {@class = "control-label"})
                    @Html.TextBoxFor(m => m.AbsoluteRefreshTokenLifetime, new {@class = "form-control"})
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.AccessTokenLifetime, new {@class = "control-label"})
                    @Html.TextBoxFor(m => m.AccessTokenLifetime, new {@class = "form-control"})
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.AccessTokenType, new {@class = "control-label"})
                    @Html.DropDownListFor(m => m.AccessTokenType, Model.AccessTokenType.AsSelectListItems(), new {@class = "form-control"})
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.AllowAccessTokensViaBrowser, new {@class = "control-label"})
                    @Html.CheckBoxFor(m => m.AllowAccessTokensViaBrowser, new {@class = "form-control"})
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.AllowOfflineAccess, new {@class = "control-label"})
                    @Html.CheckBoxFor(m => m.AllowOfflineAccess, new {@class = "form-control"})
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.AllowPlainTextPkce, new {@class = "control-label"})
                    @Html.CheckBoxFor(m => m.AllowPlainTextPkce, new {@class = "form-control"})
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.AllowRememberConsent, new {@class = "control-label"})
                    @Html.CheckBoxFor(m => m.AllowRememberConsent, new {@class = "form-control"})
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.AlwaysIncludeUserClaimsInIdToken, new {@class = "control-label"})
                    @Html.CheckBoxFor(m => m.AlwaysIncludeUserClaimsInIdToken, new {@class = "form-control"})
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.AlwaysSendClientClaims, new {@class = "control-label"})
                    @Html.CheckBoxFor(m => m.AlwaysSendClientClaims, new {@class = "form-control"})
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.AuthorizationCodeLifetime, new {@class = "control-label"})
                    @Html.TextBoxFor(m => m.AuthorizationCodeLifetime, new {@class = "form-control"})
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.ClientUri, new {@class = "control-label"})
                    @Html.TextBoxFor(m => m.ClientUri, new {@class = "form-control"})
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Enabled, new {@class = "control-label"})
                    @Html.CheckBoxFor(m => m.Enabled, new {@class = "form-control"})
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.EnableLocalLogin, new {@class = "control-label"})
                    @Html.CheckBoxFor(m => m.EnableLocalLogin, new {@class = "form-control"})
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.IdentityTokenLifetime, new {@class = "control-label"})
                    @Html.TextBoxFor(m => m.IdentityTokenLifetime, new {@class = "form-control"})
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.IncludeJwtId, new {@class = "control-label"})
                    @Html.CheckBoxFor(m => m.IncludeJwtId, new {@class = "form-control"})
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.LogoUri, new {@class = "control-label"})
                    @Html.TextBoxFor(m => m.LogoUri, new {@class = "form-control"})
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.ClientClaimsPrefix, new {@class = "control-label"})
                    @Html.TextBoxFor(m => m.ClientClaimsPrefix, new {@class = "form-control"})
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.RequireConsent, new {@class = "control-label"})
                    @Html.CheckBoxFor(m => m.RequireConsent, new {@class = "form-control"})
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.RequireClientSecret, new {@class = "control-label"})
                    @Html.CheckBoxFor(m => m.RequireClientSecret, new {@class = "form-control"})
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.RequirePkce, new {@class = "control-label"})
                    @Html.CheckBoxFor(m => m.RequirePkce, new {@class = "form-control"})
                </div>
                <form asp-action="SaveAsync">
                    <button class="btn btn-info">Save client</button>
                </form>
            }
        </div>
    </div>
    <div class="row">
        <div class="col-sm-10">
        </div>
    </div>
</div>